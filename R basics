p=32
if(p<10){
  print("less")
}else if (p>10 & p<30){
print("med")
}else{
  print("max")
}
        
q <- 19
if (q <20) {
  print('min')
} else if (q > 20  & q <= 30) {
  print('medium')
} else {
  print('max')
}

