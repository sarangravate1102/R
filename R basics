mydataset <- read.csv("C:/Users/student/Desktop/demo.csv")
print(mydataset)

barplot(mydataset$marks)
barplot(mydataset$marks,col="grey")
barplot(mydataset$marks,col="grey",main="Barplot" )
barplot(mydataset$marks,col="grey",main="Barplot",xlab="number",ylab="graph")

hist(mydataset$marks)
hist(mydataset$marks,col=colors())
hist(mydataset$marks,col=colors(),main="Histogram" )
hist(mydataset$marks,col=colors(),main="Histogram",xlab="number",ylab="graph")

sunflowerplot(mydataset$marks)
sunflowerplot(mydataset$marks,col="red")
sunflowerplot(mydataset$marks,col="red",main="SunflowerPlot")
sunflowerplot(mydataset$marks,col="green",main="SunflowerPlot",xlab="number",ylab="graph")

boxplot(mydataset$marks)
boxplot(mydataset$marks,col="yellow")
boxplot(mydataset$marks,col="yellow",main="BoxPlot")
boxplot(mydataset$marks,col="yellow",main="BoxPlot",xlab="number",ylab="graph")

pie(mydataset$marks)
pie(mydataset$marks,main="PieChart")

plot(mydataset$marks)
plot(mydataset$marks,col="blue")
plot(mydataset$marks,col="blue",main="Plot")
plot(mydataset$marks,col="blue",main="Plot",xlab="number",ylab="graph")

